{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm ci",
  "env": {
    "NODE_VERSION": "22"
  },
  "redirects": [
    { "source": "http://(.*)", "destination": "https://$1", "permanent": true },
    { "source": "/www/(.*)", "destination": "/$1", "permanent": true }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
